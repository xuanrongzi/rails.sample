<h1>Listing Users</h1>

<%= image_tag("header.png") %>

 <%= link_to 'New User', new_user_path(@user) %>
<table style="background:#66ccff">
  <tr>
    <th>User ID<th>
    <th>User Name</th>
    <th>E-mail</th>
    <th>Password</th>
    <th colspan="3">Organize</th>
  </tr>
 
  <% @user.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
                    method: :delete, data: { confirm: 'Are you sure?' }%></td>

    </tr>
  <% end %>
</table>
